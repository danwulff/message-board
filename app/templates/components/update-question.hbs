{{#if updateQuestionForm}}
  <h4>Update {{question.owner}}'s {{question.type}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="question">Question</label><br>
          {{input value=question.question id="updateQuestion"}}
        </div>

        <div class="form-group">
          <label for="author">Author</label><br>
          {{input value=question.author id="updateAuthor"}}
        </div>

        <div class="form-group">
          <label for="text">Additional text</label><br>
          {{input value=question.text id="updateText"}}
        </div>

        <button {{action 'update' question}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
